<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
        <% include ../static/partials/messages.ejs %>
      <h1><%= wiki.title %></h1>
      
      <% if(currentUser) { %>
        <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
        <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <% } %>
      <p><%- wiki.body %></p>
    
    <!-- Make private/public button -->

    <a href="/wikis/<%= wiki.id %>/collaborators/show" class="btn btn-success">New Collaborator</a>

    </main>
    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>