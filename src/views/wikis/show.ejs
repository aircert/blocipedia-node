<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
        <% include ../static/partials/messages.ejs %>
      <h1><%= wiki.title %></h1>
      
    <!-- Make private/public button -->
      <% if(currentUser) { %>
        <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
        <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <% } %>
    
    <!-- add collaborators button -->
    <% if(wiki.private) { %>
      <p><% include ../collaborators/add.ejs %></p>
    <% } %>
  
   <!-- link to edit collaborator -->
   <% if(wiki.private) { %>
    <a href="/wikis/<%= wiki.id %>/collaborators" class="btn btn-primary">+ Add collaborators</a>
  <% } %>

 <!-- show collaborators in a list -->

    </main>
    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>