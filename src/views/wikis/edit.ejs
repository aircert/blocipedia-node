<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
    <body>
      <% include ../static/partials/navbar.ejs %>
      <main class="container">
        <h1>Edit Wiki</h1>
        <form action="/wikis/<%= wiki.id %>/update" method="post">
          <div class="form-group">
            <label for="title">Wiki Title</label>
            <input value="<%= wiki.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp"
              placeholder="Enter Title">
          </div>
          <div class="form-group">
            <label for="body">Body</label>
            <textarea rows="4" class="form-control" name="body" placeholder="Enter Body"><%= wiki.body %></textarea>
          </div>
          <% include ../static/partials/baseScripts.ejs %>

          <!-- Make private/public button -->
          <% if( currentUser.isPremium() || currentUser.isAdmin() ) { %>
            <div class="form-group">
              <label for="private">Wiki status</label>
              <select class="form-control" name="private" type="checkbox">
                  <% if( wiki.private ) { %>
                    <option value="false">Public wiki</option>
                    <option selected="selected" value="true">Private wiki</option>
                  <% } else { %>
                    <option selected="selected" value="false">Private wiki</option>
                    <option value="true">Public wiki</option>
                  <% } %>
                </select>
            </div>
          <% } %>
          
          <!-- show collaborators in a list -->
        <br>
        <br>
        <div class='collabs' style='bottom: 0' style='bottom: 0px'>
          <p>Collaborators for this wiki:</p>
          <% if(wiki.collaborators) { %>
          <ul class="list-group">
            <% wiki.collaborators.forEach((collaborator) => {  %>
            <br>
            <li class="list-group-item">
              <%= collaborator.User.username %>
              <% if(currentUser && (currentUser.role === "premium" || currentUser.role === "admin")) { %>
                <form style="float:right"  style="width:25%" action="/wikis/<%= collaborator.wikiId %>/collaborators/<%= collaborator.id %>/delete"
                  method="post">
                  <button style="float:right" type="submit" class="btn btn-danger">Delete</button>
                  <input type="hidden" value="<%= collaborator.User.id %>" class="form-control" name="collaborator">
                </form>
              <% } %>
            </li>
            <% }) %>
          </ul>
          <% } %>
        </div>

          <br>
          <button type="submit" class="btn btn-primary">Update</button>
        </form>
      </main>
      <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>